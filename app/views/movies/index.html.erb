<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <%= search_form_for @q do |f| %>
        <div class="form-row">
          <div class="form-group">
            <%= f.label :title %>
            <%= f.search_field :title_cont,
                               class: "form-control",
                               autocomplete: "off" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :year %>
          <div class="col">
            <%= f.search_field :year_gteq,
                               class: "form-control",
                               autocomplete: "off" %>
          </div>
          <div class="col">
            <%= f.search_field :year_lteq,
                               class: "form-control",
                               autocomplete: "off" %>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <%= f.label "Director's name" %>
            <%= f.search_field :director_first_name_or_director_last_name_cont,
                               class: "form-control",
                               autocomplete: "off" %>
          </div>
        </div>
        <%= f.submit %>
      <% end %>
    </div>
    <div class="col-sm-8">
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <span><%= movie.year %></span>
          <span><%= movie.director.full_name %></span>
          <p><%= movie.synopsis %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
